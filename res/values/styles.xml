<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="Black">#000000</color>
    <color name="Gray">#BFBFBF</color>
    <color name="Beige">#D6D9DE</color>
    <color name="White">#FFFFFF</color>
    <color name="Blue">#0C609B</color>
    <color name="Cyan">#99D9EA</color>
    <color name="Red">#ED1C24</color>
    <color name="Yellow">#EFE4B0</color>
    
    <style name="Main">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/Beige</item>
    </style>
    
    <style name="Head">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/Blue</item>
    </style>
    
    <style name="Icon">
    	<item name="android:layout_width">30sp</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_margin">2sp</item>
        <item name="android:gravity">left</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    
    <style name="Title">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
 		<item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/White</item>
    </style>
    
    <style name="Error">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
 		<item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/Red</item>
        <item name="android:background">@color/Yellow</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">2sp</item>
        <item name="android:padding">2sp</item>
    </style>
    
    <style name="Content">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
    </style>
    
    <style name="Box">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5sp</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:background">@color/White</item>
    </style>
    
    <style name="Section">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10sp</item>
    </style>
    
    <style name="Indicator">
    	<item name="android:layout_width">5sp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/Gray</item>
    </style>
    
    <style name="TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">15sp</item>
         <item name="android:paddingLeft">5sp</item>
    </style>
    
    <style name="EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="ListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="RadioButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>
    
    <style name="ImageView">
    	<item name="android:layout_width">44sp</item>
        <item name="android:layout_height">44sp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    
</resources>
